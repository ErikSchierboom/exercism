needs string/repinsert
needs string/translate

: letters \ s -- s
  s:lc /[a-z0-9]/ r:/ "" a:join
;

: transpose \ s -- s
  "abcdefghijklmnopqrstuvwxyz0123456789"
  "zyxwvutsrqponmlkjihgfedcba0123456789"
  s:translate  
;

: chunk \ s -- s
  5 " " s:repinsert
;

\ encode TO a cipher
: >atbash \ s -- s
  letters transpose chunk
;

\ decode FROM a cipher
: atbash> \ s -- s
  >atbash " " "" s:replace! 
;
